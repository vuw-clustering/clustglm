citHeader("To cite package 'clustglm' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
note <- paste("R package version", meta$Version)

bibentry(bibtype = "Manual",
    title  = "{clustglm}: Clustering GLM Data Using Finite Mixtures",
    author = c(person("Shirley","Pledger"),
               person("Richard","Arnold")),
    year   = year,
    note   = note,
    url    = "https://CRAN.R-project.org/package=clustglm")
